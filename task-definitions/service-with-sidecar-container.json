[
  {
      "cpu":${cpu},
      "image":"${service_image}",
      "mountPoints": ${mount_points},
      "memory":${memory},
      "name":"${name}",
      "networkMode":"awsvpc",
      "essential":true,
      "logConfiguration":{
         "logDriver":"awslogs",
         "options":{
            "awslogs-group":"${log_group_name}",
            "awslogs-region":"${region}",
            "awslogs-stream-prefix":"${name}"
         }
      },
      "portMappings":[
         {
            "containerPort":${service_port},
            "hostPort":${service_port}
         }
      ],
      "environment" : ${envvars},
      "secrets" : ${secrets_task_definition},
      "entryPoint": ${entry_point},
      "command": ${command}
  },
  {
       "cpu":${apm_cpu},
       "image":"${apm_sidecar_ecr_url}",
       "memory":${apm_memory},
       "name":"${apm_name}",
       "networkMode":"awsvpc",
       "essential":true,
       "logConfiguration": {
           "logDriver": "awslogs",
           "options":{
               "awslogs-group":"${log_group_name}",
               "awslogs-region":"${region}",
               "awslogs-stream-prefix":"${apm_name}"
           }
       },
       "portMappings": [
           {
               "protocol": "udp",
               "containerPort":${apm_service_port},
               "hostPort":${apm_service_port}
           }
       ],
       "volumesFrom": []
   }
]
